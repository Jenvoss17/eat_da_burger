<div class="container">

    <div class="row">

        <div class="col-md-12">
            <img src="/img/bestburger5.png" alt="burger" class="img-responsive center-block">
        </div>

        <!-- end first row -->
    </div>

    {{!-- <div class="row">

        <div class="col-md-12">
            <h1 class="text-center text-danger">Eat-Da-Burger</h1>
        </div>

        <!-- end second row -->
    </div> --}}

    <div class="row">

        <div class="col-md-6">
            <h3>Uneaten Burgers</h3>
            <ul class="list-group">
                {{#each burgers}}
                {{#unless this.devoured}}
                <li class="list-group-item">
                    <h5>{{this.burger_name}}</h5>
                    <form action='/burgers/updateOne/{{this.id}}?_method=PUT' method='POST'>
                        <input type='hidden' name='devoured' value='true'>
                        <button type='submit' class="btn btn-warning">
                            EAT THIS!
                            <img src="/img/hamburger-solid.svg" style="width: 25px; height: 25px;" />
                        </button>
                    </form>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-md-6">
            <h3>Eaten Burgers</h3>
            <ui class="list-group">
                {{#each burgers}}
                {{#if this.devoured}}
                <li class="list-group-item">
                    <h5 class="text-muted">{{this.burger_name}}</h5>
                </li>
                {{/if}}
                {{/each}}
                </ul>
        </div>

        <!-- end third row -->
    </div>

    <br><br>

    <div class="row">

        <div class="col-md-12 text-center">
            <form class="create-update-form" action="/burgers/insertOne" method="POST">
                <div class="form-group">
                    <!-- <label for="bg">Burger Name:</label> -->
                    <textarea type="text" name="burger_name" class="form-control"></textarea><br>
                    <button class="btn btn-default" type="submit">Submit</button>
                    <h5 class="text-center">Enter a burger you want to eat and click submit!</h5>
                </div>
            </form>
        </div>

        <!-- end fourth row -->
    </div>

    <!-- end bootstrap container -->
</div>